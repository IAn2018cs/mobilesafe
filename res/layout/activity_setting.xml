<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.xiaochen.mobilesafe.view.SettingCheckItemView
                xmlns:mobilesafe="http://schemas.android.com/apk/res/com.xiaochen.mobilesafe"
                android:id="@+id/set_updata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mobilesafe:desoff="自动更新已关闭"
                mobilesafe:deson="自动更新已开启"
                mobilesafe:destitle="自动更新设置" >
            </com.xiaochen.mobilesafe.view.SettingCheckItemView>

            <com.xiaochen.mobilesafe.view.SettingCheckItemView
                xmlns:mobilesafe="http://schemas.android.com/apk/res/com.xiaochen.mobilesafe"
                android:id="@+id/set_attribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mobilesafe:desoff="归属地的显示已关闭"
                mobilesafe:deson="归属地的显示已开启"
                mobilesafe:destitle="电话归属地显示设置" >
            </com.xiaochen.mobilesafe.view.SettingCheckItemView>

            <com.xiaochen.mobilesafe.view.SettingClickItemView
                android:id="@+id/set_toast_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_reset_text_bg" >
            </com.xiaochen.mobilesafe.view.SettingClickItemView>

            <com.xiaochen.mobilesafe.view.SettingClickItemView
                android:id="@+id/set_toast_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_reset_text_bg" >
            </com.xiaochen.mobilesafe.view.SettingClickItemView>

            <com.xiaochen.mobilesafe.view.SettingCheckItemView
                xmlns:mobilesafe="http://schemas.android.com/apk/res/com.xiaochen.mobilesafe"
                android:id="@+id/set_blacklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mobilesafe:desoff="黑名单拦截已关闭"
                mobilesafe:deson="黑名单拦截已开启"
                mobilesafe:destitle="黑名单拦截设置" >
            </com.xiaochen.mobilesafe.view.SettingCheckItemView>

            <com.xiaochen.mobilesafe.view.SettingCheckItemView
                xmlns:mobilesafe="http://schemas.android.com/apk/res/com.xiaochen.mobilesafe"
                android:id="@+id/set_app_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mobilesafe:desoff="程序锁已关闭"
                mobilesafe:deson="程序锁已开启"
                mobilesafe:destitle="程序锁设置" >
            </com.xiaochen.mobilesafe.view.SettingCheckItemView>
            
            <com.xiaochen.mobilesafe.view.SettingCheckItemView
                xmlns:mobilesafe="http://schemas.android.com/apk/res/com.xiaochen.mobilesafe"
                android:id="@+id/set_open_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mobilesafe:desoff="隐藏广告"
                mobilesafe:deson="显示广告"
                mobilesafe:destitle="广告设置" >
            </com.xiaochen.mobilesafe.view.SettingCheckItemView>

            <com.xiaochen.mobilesafe.view.SettingClickItemView
                android:id="@+id/set_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_reset_text_bg" >
            </com.xiaochen.mobilesafe.view.SettingClickItemView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>